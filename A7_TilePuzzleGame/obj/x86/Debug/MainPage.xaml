<Page
    x:Class="A7_TilePuzzleGame.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:A7_TilePuzzleGame"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <!--     Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"> [uses the current theme of the os] -->

    <!-- Main Grid  -->
    <Grid x:ConnectionId='2' x:Name="AppGrid"  >
     

        <!-- Game Grid  -->
        <Grid x:ConnectionId='3' x:Name="puzzleGrid" MaxHeight="800" MaxWidth="800" Height="600" Width="600" Margin="177,122,663,238"  
              RequestedTheme="Light" Opacity="0.49" RenderTransformOrigin="0.498,0.501" >
     
          
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>                
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Grid.Row="0" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="0" Grid.Row="1" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="0" Grid.Row="2" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="0" Grid.Row="3" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="1" Grid.Row="0" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="1" Grid.Row="1" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="1" Grid.Row="2" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="1" Grid.Row="3" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="2" Grid.Row="0" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="2" Grid.Row="1" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="2" Grid.Row="2" BorderBrush="#FFF5FF06" BorderThickness="1"/>
            <Border Grid.Column="2" Grid.Row="3" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="3" Grid.Row="0" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="3" Grid.Row="1" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="3" Grid.Row="2" BorderBrush="cyan" BorderThickness="1"/>
            <Border Grid.Column="3" Grid.Row="3" BorderBrush="cyan" BorderThickness="1"/>

        </Grid>
        
        
        
        
        
        
        
    </Grid>    <!-- Main Grid  -->
</Page>

